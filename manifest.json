{
    "display_information": {
        "name": "Send to Intercom",
        "description": "Create a support ticket in Intercom directly from Slack.",
        "background_color": "#2a8c87",
        "long_description": "This app creates tickets in Intercom directly from Slack channels. Users mention the bot to open a modal form, and submitting creates tickets via Intercom's API."
    },
    "features": {
        "bot_user": {
            "display_name": "Send to Intercom",
            "always_online": false
        }
    },
    "oauth_config": {
        "scopes": {
            "bot": [
                "app_mentions:read",
                "chat:write",
                "users:read"
            ]
        }
    },
    "settings": {
        "event_subscriptions": {
            "bot_events": [
                "app_mention"
            ]
        },
        "interactivity": {
            "is_enabled": true
        },
        "org_deploy_enabled": true,
        "socket_mode_enabled": true,
        "token_rotation_enabled": false,
        "hermes_app_type": "remote",
        "function_runtime": "remote"
    }
}